<!DOCTYPE html>
<html lang="en">
 
  <head>
    <meta charset="utf-8" />
    <title>MediMate</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=0"
    />

    <!-- Favicons -->
    <link href="/assets/img/favicon.png" rel="icon" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />

    <!-- Fontawesome CSS -->
    <link
      rel="stylesheet"
      href="/assets/plugins/fontawesome/css/fontawesome.min.css"
    />
    <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css" />

    <!-- Main CSS -->
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/styles/Common/signup.css" />
    <link rel="stylesheet" href="/styles/Common/preloader.css" />

    <!-- Main JS -->
    <script src="/scripts/Common/Script_Signup.js" defer></script>
    <script src="/scripts/Common/Script_ResizePosition.js" defer></script>

  </head>
  
  <body class="account-page-singup">

    <!-- Main Wrapper -->
    <div class="main-wrapper">
     <!-- Header -->
     <header class="header">

      <nav class="navbar navbar-expand-lg header-nav">
        <div class="navbar-header">
          <a href="/" class="navbar-brand logo">
            <img src="/assets/img/logo.png" class="img-fluid" alt="Logo" />
          </a>
        </div>


        <ul class="nav header-navbar-rht">
          <li class="nav-item contact-item">
            <div class="header-contact-detail">
              <p class="contact-header">Contact MediMate</p>
              <p class="contact-info-header">011 1234567</p>
            </div>
          </li>
        </ul>

      </nav>

    </header>
    <!-- /Header -->


    <!-- /Status Message -->
    <div class="statusMessage" style="display: none;">
      <p>Hello World</p>
    </div>
      

<!-- Page Content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <!-- Register Content -->
        <div class="account-content">
          <div class="row align-items-center justify-content-center">
            <div class="col-md-7 col-lg-6 login-left">
              <img
                src="/assets/img/login-banner2.png"
                class="img-fluid"
                alt="Medimate Register"
              />
            </div>
            <div class="col-md-12 col-lg-6 login-right">
              <div class="login-header text-center">
                <h3>
                  <span id="roleTopic"></span> Register
                </h3>
              </div>

              <!-- Register Form -->
              <form method="POST">

                <div class="form-group form-focus mb-3">
                  <select name="role" id="role" class="form-control floating">
                    <option value="">Select A Role</option>
                    <option value="patient">Patient</option>
                    <option value="doctor">Doctor</option>
                  </select>
                </div>

                <div id="mainDetails" style="display: none;">

                  <div class="form-group form-focus mb-3">
                    <input type="text" class="form-control floating" id="name" name="name" required/>
                    <label class="focus-label">Name</label>
                  </div>

                  <div class="form-group form-focus mb-3">
                    <input type="email" class="form-control floating" id="email" name="email" required/>
                    <label class="focus-label">Email</label>
                  </div>

                  <div id="userCrendtials">

                    <div class="form-group form-focus mb-3">
                      <input type="password" class="form-control floating" id="password" name="createPassword" required/>
                      <label class="focus-label">Create Password</label>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-group form-focus mb-3">
                      <input type="password" class="form-control floating" id="compassword" name="confirmPassword" required/>
                      <label class="focus-label">Confirm Password</label>
                    </div>

                  </div>

                </div>

                <div class="form-group form-focus mb-3" id="slmcregi" style="display: none;">
                  <input type="text" class="form-control floating" id="slmcregistration" name="slmcregi"/>
                  <label class="focus-label">SLMC Registration Number</label>
                </div>

                <div class="text-right mb-3">
                  <a class="login-link" href="./login">Already have an account?</a>
                </div>
                <button
                  class="btn btn-primary btn-block btn-lg signUp-btn"
                  id="submitBtn"
                  type="button"
                >
                  Signup

                </button>

              </form>
              <!-- /Register Form -->
            </div>
          </div>
        </div>
        <!-- /Register Content -->
      </div>
    </div>
  </div>
</div>     
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <script src="/assets/js/jquery.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="/assets/js/script.js"></script>
  </body>


</html>
