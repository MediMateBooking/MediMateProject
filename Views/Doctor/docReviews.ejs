<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Received Reviews</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=0"
    />

    <!-- Favicons -->
    <link href="/assets/img/favicon.png" rel="icon" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />

    <!-- Fontawesome CSS -->
    <link
      rel="stylesheet"
      href="/assets/plugins/fontawesome/css/fontawesome.min.css"
    />
    <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css" />

    <!-- Main CSS -->
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/styles/patientDashboard.css" />
  </head>
  <body>
    <!-- Main Wrapper -->

    <div class="main-wrapper">
      <!-- Header -->
      <header class="header" id="header">
        <nav class="navbar navbar-expand-lg header-nav">
          <div class="navbar-header">
            <a id="mobile_btn" href="javascript:void(0);">
              <span class="bar-icon">
                <span></span>
                <span></span>
                <span></span>
              </span>
            </a>
            <a href="index-2.html" class="navbar-brand logo">
              <img src="/assets/img/logo.png" class="img-fluid" alt="Logo" />
            </a>
          </div>
          <div class="main-menu-wrapper">
            <div class="menu-header">
              <a href="index-2.html" class="menu-logo">
                <img src="/assets/img/logo.png" class="img-fluid" alt="Logo" />
              </a>
              <a id="menu_close" class="menu-close" href="javascript:void(0);">
                <i class="fas fa-times"></i>
              </a>
            </div>
            <ul class="main-nav">
              <li class="login-link">
                <a href="login.html">Login / Signup</a>
              </li>
            </ul>
          </div>
          <ul class="nav header-navbar-rht">
            <li class="nav-item contact-item"></li>

            <!-- User Menu -->
            <li class="nav-item dropdown has-arrow logged-item">
              <a
                href="#"
                class="dropdown-toggle nav-link"
                data-toggle="dropdown"
              >
                <span class="user-img">
                  <img
                    class="rounded-circle"
                    src="<%= key.profilePicture %>"
                    width="31"
                    alt="docPic"
                  />
                </span>
              </a>
              <div class="dropdown-menu dropdown-menu-right">
                <div class="user-header">
                  <div class="avatar avatar-sm">
                    <img
                      src="<%= key.profilePicture %>"
                      alt="User Image"
                      class="avatar-img rounded-circle"
                    />
                  </div>
                  <div class="user-text">
                    <h6><%= key.name %></h6>
                    <p class="text-muted mb-0">Doctor</p>
                  </div>
                </div>
                <a class="dropdown-item" href="/doctor/<%= key.userID %>"
                  >Dashboard</a
                >
                <a
                  class="dropdown-item"
                  href="/doctor/profile/<%= key.userID %>"
                  >Profile Settings</a
                >
                <a class="dropdown-item" href="/login">Logout</a>
              </div>
            </li>
            <!-- /User Menu -->
          </ul>

          <div id="progress-bar"></div>
        </nav>
      </header>
      <!-- /Header -->

      <!-- Page Content -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
              <!-- Profile Sidebar -->
              <div class="profile-sidebar">
                <div class="widget-profile pro-widget-content">
                  <div class="profile-info-widget">
                    <a class="booking-doc-img">
                      <img src="<%= key.profilePicture %>" alt="User Image" />
                    </a>
                    <div class="profile-det-info">
                      <h3>Dr. <%= key.name %></h3>

                      <div class="patient-details">
                        <h5 class="mb-0">
                          <%= key.specialization.specialist %>
                        </h5>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="dashboard-widget">
                  <nav class="dashboard-menu">
                    <ul>
                      <li>
                        <a href="/doctor/<%= key.userID %>">
                          <i class="fas fa-columns"></i>
                          <span>Dashboard</span>
                        </a>
                      </li>
                      <li>
                        <a href="/doctor/docAppointments/<%= key.userID %>">
                          <i class="fas fa-calendar-check"></i>
                          <span>Appointments</span>
                        </a>
                      </li>

                      <li class="active">
                        <a href="/doctor/docReviews/<%= key.userID %>">
                          <i class="fas fa-star"></i>
                          <span>Doctor Reviews</span>
                        </a>
                      </li>
                      <li>
                        <a href="/doctor/profile/<%= key.userID %>">
                          <i class="fas fa-user-cog"></i>
                          <span>Profile Settings</span>
                        </a>
                      </li>

                      <li>
                        <a href="/doctor/password/<%= key.userID %>">
                          <i class="fas fa-lock"></i>
                          <span>Change Password</span>
                        </a>
                      </li>
                      <li>
                        <a href="/login">
                          <i class="fas fa-sign-out-alt"></i>
                          <span>Logout</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
              <!-- /Profile Sidebar -->
            </div>

            <div class="col-md-7 col-lg-8 col-xl-9">
              <div class="doc-review review-listing">
                <!-- Review Listing -->
                <ul class="comments-list">
                  <!-- Comment List -->
                  <li>
                    <div class="comment">
                      <img
                        class="avatar rounded-circle"
                        alt="User Image"
                        src="/assets/img/patients/male.jpg"
                      />
                      <div class="comment-body">
                        <div class="meta-data">
                          <span class="comment-author"
                            >Tharindu Senanayake</span
                          >
                          <span class="comment-date">Reviewed 2 Days ago</span>
                          <div class="review-count rating">
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star"></i>
                          </div>
                        </div>
                        <p class="comment-content">
                          I had a very positive experience during my visit. From the moment I walked in, the staff was welcoming and
                          efficient. The consultation was detailed, and my concerns were addressed with patience and professionalism.
                          The advice given was practical and easy to follow, which really helped with my recovery.
                          I truly appreciate the high level of care and attention provided.
                        </p>
                        <div class="comment-reply">
                          <a class="comment-btn" href="#">
                            <i class="fas fa-reply"></i> Reply
                          </a>
                          <p class="recommend-btn">
                            <span>Recommend?</span>
                            <a href="#" class="like-btn">
                              <i class="far fa-thumbs-up"></i> Yes
                            </a>
                            <a href="#" class="dislike-btn">
                              <i class="far fa-thumbs-down"></i> No
                            </a>
                          </p>
                        </div>
                      </div>
                    </div>
                  </li>
                  <!-- /Comment List -->

                  <!-- Comment List -->
                  <li>
                    <div class="comment">
                      <img
                        class="avatar rounded-circle"
                        alt="User Image"
                        src="/assets/img/patients/femel.jpg"
                      />
                      <div class="comment-body">
                        <div class="meta-data">
                          <span class="comment-author">Ishani Wickramasinghe</span>
                          <span class="comment-date">Reviewed 4 Days ago</span>
                          <div class="review-count rating">
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                          </div>
                        </div>
                        <p class="comment-content">
                          The service was outstanding, and I felt comfortable throughout my visit. Everything was
                          explained in a way that was easy to understand, which made me feel more confident about my treatment. 
                          The environment was clean and well-organized, and I didn’t have to wait long for my appointment. Overall, 
                          it was a smooth and stress-free experience. I would definitely recommend it to others
                        </p>
                        <div class="comment-reply">
                          <a class="comment-btn" href="#">
                            <i class="fas fa-reply"></i> Reply
                          </a>
                          <p class="recommend-btn">
                            <span>Recommend?</span>
                            <a href="#" class="like-btn">
                              <i class="far fa-thumbs-up"></i> Yes
                            </a>
                            <a href="#" class="dislike-btn">
                              <i class="far fa-thumbs-down"></i> No
                            </a>
                          </p>
                        </div>
                      </div>
                    </div>
                  </li>
                  <!-- /Comment List -->

                  <!-- Comment List -->
                  <li>
                    <div class="comment">
                      <img
                        class="avatar rounded-circle"
                        alt="User Image"
                        src="/assets/img/patients/male.jpg"
                      />
                      <div class="comment-body">
                        <div class="meta-data">
                          <span class="comment-author">Kavindu Rathnayake</span>
                          <span class="comment-date">Reviewed 5 Days ago</span>
                          <div class="review-count rating">
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                            <i class="fas fa-star filled"></i>
                          </div>
                        </div>
                        <p class="comment-content">
                          I was really impressed with the level of care and professionalism. The consultation was thorough, 
                          and all my questions were answered clearly. I noticed improvements soon after starting my treatment,
                          which reassured me that I was in good hands. The staff was friendly and made sure I was 
                          comfortable throughout the process. I highly appreciate the effort and dedication shown.
                        </p>
                        <div class="comment-reply">
                          <a class="comment-btn" href="#">
                            <i class="fas fa-reply"></i> Reply
                          </a>
                          <p class="recommend-btn">
                            <span>Recommend?</span>
                            <a href="#" class="like-btn">
                              <i class="far fa-thumbs-up"></i> Yes
                            </a>
                            <a href="#" class="dislike-btn">
                              <i class="far fa-thumbs-down"></i> No
                            </a>
                          </p>
                        </div>
                      </div>
                    </div>
                  </li>
                  <!-- /Comment List -->
                </ul>
                <!-- /Comment List -->
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /Page Content -->

      <footer class="footer">
        <!-- Footer Bottom -->
        <div class="footer-bottom">
          <div class="container-fluid">
            <!-- Copyright -->
            <div class="copyright">
              <div class="row">
                <div class="col-md-6 col-lg-6">
                  <div class="copyright-text">
                    <p class="mb-0"><a href="">MediMate</a></p>
                  </div>
                </div>
                <div class="col-md-6 col-lg-6">
                  <!-- Copyright Menu -->
                  <div class="copyright-menu">
                    <ul class="policy-menu">
                      <li><a href="">Terms and Conditions</a></li>
                      <li><a href="">Policy</a></li>
                    </ul>
                  </div>
                  <!-- /Copyright Menu -->
                </div>
              </div>
            </div>
            <!-- /Copyright -->
          </div>
        </div>
        <!-- /Footer Bottom -->
      </footer>
    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <script src="/assets/js/jquery.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>

    <!-- Sticky Sidebar JS -->
    <script src="/assets/plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
    <script src="/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>

    <!-- Custom JS -->
    <script src="/assets/js/script.js"></script>
  </body>
</html>
